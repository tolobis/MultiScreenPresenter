<UserControl x:Class="ScreenVdeoV2.ListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenVdeoV2"
             mc:Ignorable="d" d:DesignWidth="800" Height="94.8">
    <StackPanel Margin="0,0,0,10.2" Orientation="Horizontal">
        <Label Content="{Binding Name}"/>
        <Label Content="{Binding Type}"/>
        <MediaElement Source="{Binding Filename}"/>
    </StackPanel>
</UserControl>
